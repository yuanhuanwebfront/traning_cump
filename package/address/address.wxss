.address-box{margin-top: 20rpx;}
.address-item{
    width: 100%;
    height: 100rpx;
    box-sizing: border-box;
    padding: 10rpx 10rpx 10rpx 30rpx;
    background: #fff;
    border-bottom: 1px solid #e5e5e5;
    justify-content: space-between;
}
.address-item text{
    color: #8CA5FF;
    font-size: 40rpx;
}
.address-item input{
    margin-left: 30rpx;
    border: none;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 28rpx;
}
.address-item .area-text{
    padding-left: 28rpx;
    font-size: 28rpx;
    color: #000;
    line-height: 100rpx;
}
.bottom-btn{
    position: fixed;
    bottom: 0;
    width: 100%;
    border-radius: 0;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 32rpx;
}

.bottom-btn.disabled{
    color: rgba(255, 255, 255, 0.6) !important;
    background: #8CA5FF !important;
}