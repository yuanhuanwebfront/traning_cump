.user-area {
    padding-left: 40rpx;
    background: #fff;
}

.user-area .start {
    justify-content: flex-start;
    border-bottom: 1px solid #f1f1f1;
}

.input {height: 100rpx;}

.input input {
    padding-left: 8rpx;
    box-sizing: border-box;
    height: 80rpx;
    line-height: 80rpx;
    display: inline-block;
    width: 90%;
    font-size: 28rpx;
    border: none;
}

.input .iconfont {
    color: #8CA5FF;
    font-size: 38rpx;
    margin-right: 20rpx;
}

.picker-inner {
    width: 600rpx;
    height: 100rpx;
}

.order-area {
    margin-top: 20rpx;
    margin-bottom: 100rpx;
}

.order-header {
    justify-content: space-between;
    padding: 0 28rpx;
    height: 100rpx;
    background: #fff;
    border-bottom: 2rpx solid #f1f1f1;
}

.order-area image {
    width: 240rpx;
    height: 140rpx;
}

.order-content {
    padding: 26rpx;
    background: #fff;
    justify-content: flex-start;
}

.order-content .inner {
    margin-left: 30rpx;
}

.inner .word-13:first-child {
    margin-bottom: 44rpx;
}

.discount-area {
    margin-top: 20rpx;
    background: #FFF;
}

.discount-item {
    box-sizing: border-box;
    padding: 0 30rpx;
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 2rpx solid #f1f1f1;
    justify-content: space-between;
}

.discount-item.no-border{
    border-bottom: none;
}

.discount-item text {
    font-size: 28rpx;
}

.discount-item text:last-child {
    margin-right: 26rpx;
}

.balance-area {
    position: fixed;
    width: 100%;
    bottom: 0;
    height: 100rpx;
    background: #fff;
    z-index: 30;
}

.balance-area view, .balance-area button {display: inline-block;}

.balance-area .total {
    width: 65%;
    height: 100rpx;
    line-height: 100rpx;
    display: inline-block;
    justify-content: space-between;
    padding: 0 26rpx;
}
.total view.left text{font-size: 30rpx;}

.balance-area .total view.detail{
    font-size: 26rpx;
    color: #333;
}

.balance-area button {
    width: 35%;
    height: 100rpx;
    line-height: 100rpx;
    background: #8CA5FF;
    font-size: 36rpx;
    color: #fff;
    border-radius: 0;
}

.stripe{
    width: 100%;
    height: 6rpx;
    background-image: url("data:image/png;base64,");
    background-repeat: repeat-x;
    background-size: 60rpx 6rpx;
}
.user-tab{
    width: 100%;
    box-sizing: border-box;
    padding-left: 30rpx;
    /*background: #666;*/
}
.user-tab view{margin-top: 28rpx;}
.bottom{
    padding: 0 40rpx 28rpx 0;
}
.bottom text{
    line-height: 36rpx;
}

.bottom-area{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.4);
    z-index: 20;
}

/*  瑜币抵扣弹窗  */
.point-area{
    position: fixed;
    z-index: 40;
    width: 100%;
    bottom: 0;
    background: #fff;
    padding-bottom: 40rpx;
}
.point-item{
    justify-content: space-between;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 28rpx;
    box-sizing: border-box;
    padding: 0 30rpx;
    border-bottom: 2rpx solid #f1f1f1;
}
.point-item .icon-close{
    position: absolute;
    right: 60rpx;
    display: inline-block;
    top: 35rpx;
    width: 30rpx;
    height: 30rpx;
    background-image: url("data:image/png;base64,");
    background-size: cover;
}

/*  订单明细区域  */
.detail-order-area{
    position: fixed;
    bottom: 100rpx;
    left: 0;
    width: 100%;
    background: #ddd;
}
.order-title{
    height: 72rpx;
    line-height: 72rpx;
    padding: 0 38rpx;
    background: #f0f0f0;
    color: #333;
    font-size: 26rpx;
}
.detail-order-area .flex{
    justify-content: space-between;
    margin-bottom: 24rpx;
}
.detail-order-area .detail-content{
    background: #fff;
    padding: 42rpx 72rpx 30rpx 40rpx;
}

.payOrder.disable{
    color: rgba(255, 255, 255, 0.6) !important;
    background: #8CA5FF !important;
}