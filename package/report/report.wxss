.report-header{
    box-sizing: border-box;
    padding-top: 40rpx;
    height: 210rpx;
    background: url("http://qiniucdn.dailyyoga.com.cn/fd/46/fd46a5d61f882f331f2a25c117c8e4ba.png") no-repeat top right;
    background-size: 180rpx 140rpx;
    background: #fff;
}
.report-header .center{justify-content: center;margin-bottom: 20rpx;}
.cool-box{
    position: relative;
    display: inline-block;
    margin-right: 10rpx;
}
.coolNum{
    display: inline-block;
    width: 48rpx;
    height: 75rpx;
    line-height: 75rpx;
    color: #fff;
    background-color: #99B3FC;
}
.cool-num-bg{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 48rpx;
    height: 37.5rpx;
    opacity: 0.2;
    background-image: linear-gradient(-180deg, #486DD1 0%, #98B4FF 100%);
}
.stripe{
    width: 100%;
    height: 6rpx;
    margin-top: 20rpx;
    background-image: url("data:image/png;base64,");
    background-repeat: repeat-x;
    background-size: 60rpx 6rpx;
}
.report-item{
    box-sizing: border-box;
    padding: 0 30rpx;
    background: #fff;
    font-size: 28rpx;
    height: 90rpx;
    line-height: 90rpx;
    color: #333;
    border-bottom: 1px solid #e5e5e5;
}
.report-step{
    font-size: 28rpx;
    color: #666666;
    padding: 0 30rpx;
    box-sizing: border-box;
    margin-bottom: 40rpx;
}
.money{
    margin-top: 20rpx;
    padding: 0 30rpx;
    line-height: 34rpx;
    margin-bottom: 40rpx;
}
.save-btn{
    border: 2rpx solid #999;
    height: 50rpx;
    line-height: 50rpx;
    color: #999;
    font-size: 28rpx;
    width: 214rpx;
    border-radius: 48rpx;
}
.report-bg{
    background-image: url("http://qiniucdn.dailyyoga.com.cn/fb/c0/fbc0d8bc1f41af40daae7f3d40e88e11.png");
    background-size: 180rpx 140rpx;
    background-repeat: no-repeat;
    background-position: right top;
}
.no-report{
    background-image: url("http://qiniucdn.dailyyoga.com.cn/49/d9/49d9197e58a64150d29216a3c5651c36.png");
}
.img-area{
  padding: 0 20rpx;
  margin-bottom: 60rpx;
}
.notice{
    height: 90rpx;
    line-height: 90rpx;
    padding-left: 20rpx;
}
.share-area{
    margin-top: 40rpx;
}
.share-box .rebate-rule{margin-bottom: 20rpx;}