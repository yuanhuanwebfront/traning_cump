.home-header{
    height: 202rpx;
    padding: 0 38rpx;
    box-sizing: border-box;
    background-image: -webkit-linear-gradient(left, #27b3e5, #9371f0);
    justify-content: space-between;
    color: #fff;
}
.mark{
    display: flex;
    align-items: center;
    margin-left:24rpx;
    min-width: 134rpx;
    height: 38rpx;
    line-height: 38rpx;
    border-radius: 38rpx;
    font-size: 24rpx;
    color: #51370E;
    background-color: #F5E521;
}
.session-name{margin-top: 30rpx;}
.practice-plan{
    position: relative;
    width: 74px;
    height: 74px;
    overflow: hidden;
}
.practice-plan .text{
    position: absolute;
    width: 100%;
    top: 60rpx;
    left: 0;
    font-size: 28rpx;
    line-height: 28rpx;
    color: #FFFFFF;
}
.calendar{
    padding: 0rpx 21rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    background: #fff;
    padding-bottom: 20rpx;
}
.session-item{
    background: #fff;
    border-bottom: 2rpx solid #f1f1f1;
}
.session-title{
    height: 60rpx;
    line-height: 60rpx;
    padding-left: 100rpx;
    font-size: 28rpx;
    color: #999;
    background-color: #fff;
    border-bottom: 2rpx solid #f1f1f1;
}
.session-info{
    box-sizing: border-box;
    justify-content: space-between;
    padding: 0rpx 40rpx 0 56rpx;
    height: 150rpx;
}
.session-tidbit{
    justify-content: flex-start;
    height: 88rpx;
    padding: 0 54rpx;
    background: #f5f5f5;
}
.session-info .reward-bg{
    height: 100%;
    padding-left: 80rpx;
}
.reward-bg .word-14{
    margin-top: 34rpx;
    margin-bottom: 8rpx;
    width: 100%;
}
.icon-bofang{
    font-size: 44rpx;
    color: #8CA5FF;
}
.icon-shipinzhibo{
    font-size: 42rpx;
    color: #8CA5FF;
    margin-right: 40rpx;
}
.session-video{
    position: absolute;
    top: 0;
    width: 100%;
    height: 0rpx;
}
