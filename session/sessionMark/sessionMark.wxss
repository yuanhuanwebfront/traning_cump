.desc-area{
    padding: 30rpx 0;
    background: #fff;
}

.desc-area textarea{
    width: 100%;
    height: 440rpx;
    box-sizing: border-box;
    padding: 0 28rpx;
    font-size: 28rpx;
}

.img-upload-area{
    justify-content: space-between;
    align-items: flex-end;
    overflow: visible;
}

.image{
    position: relative;
    width: 140rpx;
    height: 140rpx;
    margin: 0 16rpx 0 28rpx;
    overflow: visible;
}

.image-inner{
    display: inline-block;
    position: relative;
    overflow: visible;
}

.image-inner .delete{
    position: absolute;
    z-index: 20;
    top: -18rpx;
    right: 0rpx;
    display: block;
    width: 36rpx;
    height: 36rpx;
    border-radius: 18rpx;
    background: url("data:image/png;base64,") no-repeat center center;
    background-size: cover;
}

.img-upload-area button{
    background-image: url("data:image/png;base64,");
    background-size: cover;
}

.mark-area{
    text-align: center;
    padding-top: 74rpx;
}

.percent{
    font-size: 28rpx;
    color: #EE6723;
}

.mark-area image{
    width: 356rpx;
    height: 270rpx;
}

.submit-btn{
    position: fixed;
    bottom: 0;
    width: 100%;
    background: #7D9FFC;
    border-radius: 0;
    font-size: 34rpx;
    color: #fff;
    height: 100rpx;
    line-height: 100rpx;

}
.submit-btn.disabled{
    color: rgba(255, 255, 255, 0.5);
}