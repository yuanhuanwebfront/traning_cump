.list-item{
    background: #fff;
    margin-top: 22rpx;
    padding: 26rpx;
    justify-content: flex-start;
}
.list-item image{
    width: 256rpx;
    height: 144rpx;
}
.desc{margin-left: 20rpx;}
.desc .flex{
    margin-top: 70rpx;
    width: 380rpx;
    justify-content: space-between;
}
.status{
    height: 34rpx;
    line-height: 34rpx;
    font-size: 22rpx;
    color: #666;
    background: #E5E5E5;
    border-radius: 6rpx;
    text-align: center;
    padding: 2rpx 22rpx;
}
.status.active{
    background: #F5E521;
    color: #51370E;
}
.empty{margin-top: 240rpx;}
.empty image{
    width: 336rpx;
    height: 278rpx;
}
.empty .word{margin-top: 24rpx;}
.empty .btn-confirm{
    width: 260rpx;
    height: 72rpx;
    line-height: 72rpx;
    border-radius: 100rpx;
    font-size: 30rpx;
    margin-top: 40rpx;
}
