<view class="activity-item-container">

    <image src="{{activityInfo.sessionImage}}" data-info="{{activityInfo}}" bindtap="toActivityDetail"></image>

    <view class="activity-desc">
        <view class="word-15 color-3 over-hide">{{activityInfo.sessionName}}</view>
        <view class="flex">
            <view style="max-width:60%;" class="word-13 color-9 over-hide">{{activityInfo.sessionTitle}}</view>
            <view>
                <text class="word-15 color-price" data-info="{{activityInfo}}" bindtap="toActivityDetail">￥{{activityInfo.price}}</text>
                <!--    按钮状态有三种 0元参加  已参加   已购买  -->
                <text wx:if="{{activityInfo.status === 0}}" data-info="{{activityInfo}}" bindtap="toActivityDetail" class="word-12 price-bg">0元参加</text>
                <text wx:if="{{activityInfo.status === 1}}" data-info="{{activityInfo}}" bindtap="toActivityDetail" class="word-12 price-bg">已参加</text>
                <text wx:if="{{activityInfo.status === 2}}" data-info="{{activityInfo}}" bindtap="toActivityDetail" class="word-12 price-bg">已购买</text>
            </view>
        </view>
        <view class="join-info word-12">{{activityInfo.baseEnrollNum}}人参加</view>
    </view>

    <view class="split-area" wx:if="{{showSplit}}"></view>

</view>