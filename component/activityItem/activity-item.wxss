.activity-item-container{
    position: relative;
    background: #fff;
}
.activity-item-container image{
    margin-bottom: 12rpx;
    height: 280rpx;
}
.activity-desc{
    padding: 0 26rpx;
    padding-bottom: 14rpx;
    box-sizing: border-box;
}
.activity-desc .session-name{
    font-size: 30rpx;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.activity-desc .flex{
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
}
.activity-desc .session-title{
    font-size: 26rpx;
    color: #999;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.activity-desc .session-price{
    font-size: 30rpx;
    color: #FE6B42;
}

.activity-desc .join-info{
    position: absolute;
    font-size: 24rpx;
    color: #fff;
    top: 0;
    right: 0;
    height: 44rpx;
    line-height: 44rpx;
    padding: 0rpx 10rpx 0rpx 30rpx;
    border-bottom-left-radius: 30rpx;
    background-image: radial-gradient(circle at -20% 15%, #01D5E3 10%, #6184EA 50%, #996FF2 100%);
}
.price-bg{
    background: #fe6b42;
    height: 24rpx;
    line-height: 24rpx;
    font-size: 24rpx;
    color: #fff;
    padding: 2rpx 12rpx;
    border-radius: 20rpx;
    margin-left: 12rpx;
    margin-bottom: 3rpx;
}
.activity-desc .error{
    background: #c6c6c6;
    color: #fff;
}
.split-area{
    height: 20rpx;
    background-color: #f9fafa;
}