.button-dialog-bg{
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.4);
}
.button-dialog-body{
    margin: 0 auto;
    margin-top: 300rpx;
    width: 600rpx;
    background: #fff;
    border-radius: 10rpx;
}
.button-dialog-body .title{
    margin-top: 54rpx;
    margin-bottom: 26rpx;
    width: 100%;
    height: 30rpx;
    line-height: 30rpx;
    text-align: center;
    font-size: 30rpx;
    color: #333;
}
.button-dialog-body .content{
    font-size: 28rpx;
    color: #666;
    line-height: 40rpx;
    text-align: center;
    padding: 0 32rpx;
    padding-bottom: 40rpx;
    border-bottom: 2rpx solid rgba(200, 200, 200, 0.6);
}
.button-dialog-body .button-area{
    display: flex;
    justify-content: space-around;
    align-items: center;
    height: 108rpx;
}
.button-dialog-body .button-area button{
    width: 180rpx;
    height: 52rpx;
    line-height: 52rpx;
    border-radius: 26rpx;
    font-size: 26rpx;
    background: #c8c8c8;
    color: #fff;
}
.button-dialog-body .button-area button.confirm{
    background: #8CA5FF;
}