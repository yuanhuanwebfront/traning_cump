.btn-area{
    margin-top: 48rpx;
    justify-content: center;
}
.empty-img{
    width: 420rpx;
    height: 340rpx;
    margin: 0 auto;
    margin-bottom: 26rpx;
    background-image: url("http://qiniucdn.dailyyoga.com.cn/74/90/7490eb4dc5c0bb970a8f2553a7004ed8.png");
    background-size: 100% 100%;
}
.change-activity{
    padding: 0;
    width: 128rpx;
    height: 40rpx;
    background: #e1e1e1;
    line-height: 40rpx;
    border-radius: 20rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}
.list-title{
    padding: 0 20rpx;
    font-weight: 700;
    height: 60rpx;
    line-height: 80rpx;
    background: #fff;
}
.activity-title{
    height: 80rpx;
    line-height: 80rpx;
    justify-content: space-between;
}
.my-activity{
    padding: 0 20rpx;
    background: #fff;
}
.my-activity-item{
    justify-content: flex-start;
    padding: 20rpx 0;
}
.my-activity-item .main-title{margin-bottom: 6rpx;}
.my-activity-item image{
    width: 260rpx;
    height: 149rpx;
    margin-right: 20rpx;
}
.my-activity-item .play-btn{
    background: #8ca5ff;
    color: #fff;
    width: 156rpx;
    height: 40rpx;
    line-height: 40rpx;
    border-radius: 20rpx;
    margin-top: 20rpx;
    text-indent: 20rpx;
    /*  tip 播放的三角按钮 */
    background-image: url("data:image/png;base64,");
    background-repeat: no-repeat;
    background-position: right 16rpx center;
    background-size: 16rpx 24rpx;
}
.get-more{
    height: 80rpx;
    line-height: 80rpx;
}